 date-modified = {2020-01-04 21:55:43 -0700},
 keywords = {papers, scalable, systems, distributed, sharedmemory},
 month = {November 18},
 title = {A Framework for an In-depth Comparison of Scale-up and Scale-out},
 year = {2013}
}

