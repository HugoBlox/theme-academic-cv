 date-added = {2017-07-31 03:27:58 +0000},
 date-modified = {2020-01-04 21:41:54 -0700},
 keywords = {papers, reproducibility, devops},
 month = {June 2},
 title = {The Popper Convention: Making Reproducible Systems Evaluation Practical},
 year = {2017}
}

